extend ../admin

block navbar
    
block body
  div.left
    each restaurant in restaurants
      h2 Restaurants
      div.restaurant
        div.header
          h3
            a(href='/admin/restaurant/' + restaurant.id)= restaurant.name
        div.rest
          img(src= restaurant.img height='40' width='40')
          div.Location
            p= restaurant.city
            p= restaurant.state
          div.info
            p= restaurant.cuisine
            - var i=1
            while i<= restaurant.rating
              img(src='/images/star.png' width='15' height='15' class=i++)
  div.right
    each employee in employees
      h2 Employees
      div.employee 
        div.header
          h3
            a(href='#')= employee.first_name + ' ' + employee.last_name
        div.rest
          div.position
            p= employee.position
          div.performance
            - var i=1
            while i <= employee.performance
              img(src='/images/star.png' width='20' height='20' class=i++)
        
          
        
