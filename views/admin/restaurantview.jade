extend ../adminlayout

block content

  header.admin
    h1= restaurant.name
    div
      a(href='/admin') Return to Admin

  main.restaurantView
    div.view
      img(src=restaurant.img, height='150px' width='150px')
    div.detail
      h2= restaurant.city + ", " + restaurant.state
      p= restaurant.description
      form.buttons(action='/admin/restaurants/'+ restaurant.id + '/delete', method='post')  
        button.green(type='button')
          a(href='/admin/restaurants/' + restaurant.id + '/edit') Edit Restaurant
        button.red(type='submit' name='button' value='delete') Delete
    div.restaurantemployees
      div.buttons
        button.newhire(type='button')
          a(href='/admin/restaurants/' + restaurant.id + '/employees/new') New Hire
      if employees
        each employee in employees
          div.employee.table
            div.tableheader
              h3= employee.first_name + ' ' + employee.last_name
            div.tablebody
              div.position
                p= employee.position
              div.performance
                p Performance
                - var i=1
                while i <= employee.performance
                  img(src='/images/star.png' width='20' height='20' class=i++)
              form.buttons(action='/admin/restaurants/' + restaurant.id + '/employees/' + employee.id + '/delete' method='post')
                a(href='/admin/restaurants/' + restaurant.id + '/employees/' + employee.id + '/edit') Update
                button Remove
