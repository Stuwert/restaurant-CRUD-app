extend ../layout

block content

  include header  
  main
    each val in restaurants
      div.food
        h2
          a(href='/restaurant/' + val.id )= val.name
        img(src='/images' + val.img, height='125' width='125')
        p= val.cuisine
        p= val.location.city + ', ' + val.location.state
        div
          - var i = 1
          while i < val.rating
            img(src='/images/star.png' height='25' width='25' id= i++)
